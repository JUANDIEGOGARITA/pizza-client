<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pizza_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/pic_pizza_add_topping" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/add_topping_title_background"
            android:layout_alignBottom="@+id/pizza_pic"
            android:layout_height="70dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Please add your Topping"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/time_wrapper"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/white"
        android:background="@drawable/item_background"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">


        <EditText
            android:id="@+id/topping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Topping"
            android:imeOptions="actionDone"
            android:inputType="none"
            android:textColor="@android:color/white" />
    </android.support.design.widget.TextInputLayout>


</LinearLayout>